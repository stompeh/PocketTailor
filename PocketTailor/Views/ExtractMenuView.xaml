<UserControl x:Class="PocketTailor.Views.ExtractMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PocketTailor.Views"
             xmlns:viewModel="clr-namespace:PocketTailor.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewModel:ExtractMenuViewModel/>
    </UserControl.DataContext>

    <StackPanel>
        <Border Margin="10" Background="#96031a" Height="400" Width="250">
            <Border.Clip>
                <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,250,400"/>
            </Border.Clip>
            <StackPanel VerticalAlignment="Top">
                <TextBlock Margin="10" 
                           FontSize="14" 
                           TextWrapping="Wrap"
                           Text="TODO: Create a system scan display"></TextBlock>
            </StackPanel>

            

        </Border>
    </StackPanel>
</UserControl>
